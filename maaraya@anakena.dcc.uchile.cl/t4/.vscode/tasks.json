{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile",
			"type": "shell",
			"command": "gcc",
			"args": [
				  "${file}",
				  "-o",
				  "${fileDirname}/${fileBasenameNoExtension}.exe",
				  "-g",
				  "-Wall",
				  "-std=c++17"
			],
			"group": {
				  "kind": "build",
				  "isDefault": true
			}
		 }
	]
}